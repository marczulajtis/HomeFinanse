@model HomeFinanse.Areas.Categories.Models.CategoryNotNullable

<div class="h3 margin-top-20">
    Add category
</div>

@if (ViewData["CategoryAdded"] != null)
{
    <div class="alert-success alert">
    
            @ViewData["CategoryAdded"]
    </div>
}

@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

@using (Ajax.BeginForm("AddCategory", "Category", new { area = "Categories" }, new AjaxOptions { UpdateTargetId = "categoriesList" }, null))
{
    <div class="box box-primary">
        <form role="form">
            <div class="box-body">
                <div class="form-group">
                    <label>Category Name</label>
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label>Category Importance</label>
                    @Html.CheckBoxFor(model => model.NFLAGNotNullable, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <input type="submit" value="Add category" class="btn btn-primary btn-block btn-flat" id="addCategoryBtn" 
                           data-add-category-url="@Url.Action("ShowCategories", "Category", new { area = "Categories" })" />
                </div>
            </div>
        </form>
    </div>
}