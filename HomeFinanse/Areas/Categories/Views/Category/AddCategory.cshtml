@model HomeFinanse.Areas.Categories.Models.CategoryNotNullable

<div class="h3 margin-top-20">
    Add category
</div>
@if (ViewData["CategoryAdded"] != null)
{
    <div class="alert-success alert">
    
            @ViewData["CategoryAdded"]
    </div>
}

@Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

@using (Html.BeginForm("AddCategory", "Category", new { area = "Categories" }, FormMethod.Post, null))
{
    <hr />
    <div class="box box-primary">
        <div class="form">
            <div class="box-body">
                <div class="form-group">
                    Category Name
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    Category Importance
                    @Html.CheckBoxFor(model => model.NFLAGNotNullable, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <input type="submit" value="Add category" class="btn btn-sm btn-primary" />
                </div>
            </div>
        </div>
    </div>
}