@model HomeFinanse.Areas.Outcomes.Models.OutcomeViewModel

@{
    ViewBag.Title = "Outcomes";
}

@* Add income *@

<div>
    @{
        Html.RenderPartial("AddOutcome");
    }
</div>

<hr />

<h3>
    Outcomes
</h3>

@if (Model != null)
{
    if (Model.Outcomes == null || Model.Outcomes.Count == 0)
    {
        <h3 class="label label-warning"> No outcomes </h3>
    }
    else
    {

        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Value
                </th>
                <th>
                    Date
                </th>
                <th>
                    Category
                </th>
                <th>
                    Place
                </th>
                <th>
                    Planned
                </th>
                @*<th>
                    Planned Month
                </th>
                <th>
                    Planed Year
                </th>*@
                <th>
                    Period name
                </th>
                <th>
                    Payed
                </th>
                <th>
                    Options
                </th>
            </tr>
            @foreach (var item in Model.Outcomes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OutcomeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Place)
                    </td>
                    <td>
                        @if (item.Planned == true)
                        {
                            <span class="glyphicon glyphicon-ok red text-center"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove black text-center"></span>
                        }
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Month)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>*@
                    <td>
                        @if (item.Period != null)
                        {
                            @Html.DisplayFor(modelItem => item.Period.PeriodName)
                        }
                    </td>
                    <td>
                        @if (item.Payed == true)
                        {
                            <span class="glyphicon glyphicon-ok red text-center"></span>
                        }
                        else
                        {
                            <span class="glyphicon glyphicon-remove black text-center"></span>
                        }
                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id=item.ID }) |*@
                        @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
                        @*@Html.ActionLink("", "Delete", new { id=item.ID })*@

                        @Html.ActionLink(" ", "DeleteOutcome", "Outcome", new { area = "Outcomes", outcomeID = item.ID }, new
                       {
                           @onclick = "return confirm('Are you sure you want to delete this outcome?');",
                           @class = "glyphicon glyphicon-trash"
                       })
                    </td>
                </tr>
            }
        </table>
    }
}
