@model IEnumerable<HomeFinanse.Models.Period>
@* add new category *@
@Html.Partial("AddPeriod", new HomeFinanse.Areas.Periods.Models.PeriodModel())

<hr />

@* show errors if exist *@

@Html.ValidationSummary(true)

@if (Model != null)
{
    if (Model.ToList().Count == 0)
    {
        <h3 class="label label-warning"> No periods </h3>
    }
    else
    {
        <h3>
            Periods
        </h3>

<table class="table">
    <tr>
        <th>
            Period Name
        </th>
        <th>
            Period start date
        </th>
        <th>
            Period end date
        </th>
        <th>
            Options
        </th>
    </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PeriodEnd)
                </td>
                <td>
                    @Html.ActionLink(" ", "DeletePeriod", "Period", new { area = "Periods", periodID = item.PeriodID }, new
               {
                   @onclick = "return confirm('Are you sure you want to delete this period?');",
                   @class = "glyphicon glyphicon-trash"
               })

                    @*@Html.ActionLink(" ", "EditCategory", "Category", new { area = "Categories", categoryID = item.CategoryID},
                        new { @onclick = "editCategory(categoryID)", @class = "glyphicon glyphicon-pencil" })*@
                </td>
            </tr>
        }
</table>
    }
}
