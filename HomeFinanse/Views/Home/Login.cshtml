@model HomeFinanse.Models.UserViewModel

@{
    ViewBag.Title = "Login";
}

@if (ViewData["LoginError"] != null)
{
    <label class="label-input100 label-danger">@ViewData["LoginError"]</label>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, null))
{
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-form-title" style="background-image: url(~/Content/login_form/images/bg-01.jpg);">
                <span class="login100-form-title-1">
                    Sign In
                </span>
            </div>

            <form class="login100-form validate-form">
                <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                    <span class="label-input100">Username</span>
                    @*<input class="input100" type="text" name="username" placeholder="Enter username">*@
                    @Html.TextBoxFor(x => x.LoginUser.UserName, new { @class = "input100", type = "text", placeholder = "Enter username" })
                    <span class="focus-input100"></span>
                </div>

                <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    @*<input class="input100" type="password" name="pass" placeholder="Enter password">*@
                    @Html.TextBoxFor(x => x.LoginUser.Password, new { @class = "input100", type = "password", placeholder = "Enter password" })
                    <span class="focus-input100"></span>
                </div>

                @*<div class="flex-sb-m w-full p-b-30">
                    <div class="contact100-form-checkbox">
                        @Html.CheckBoxFor(x => x.RememberMe, new { @class = "input-ckechbox10" })
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div>
                        <a href="#" class="txt1">
                            Forgot Password?
                        </a>
                    </div>
                </div>*@

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Login
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
}